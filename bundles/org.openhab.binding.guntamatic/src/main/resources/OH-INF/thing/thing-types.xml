	<channel-type id="setprogram" advanced="false">
		<item-type>String</item-type>
		<label>Set Program</label>
		<description>Set Program of the Guntamatic Heating System (OFF, NORMAL, WARMWATER, MANUAL)</description>
		<state>
			<options>
				<option value="0">OFF</option>
				<option value="1">NORMAL</option>
				<option value="2">WARMWATER</option>
				<option value="8">MANUAL</option>
			</options>
		</state>
	</channel-type>
	<channel-type id="setboilerapproval" advanced="true">
		<item-type>String</item-type>
		<label>Set Boiler Approval</label>
		<description>Set Boiler Approval of the Guntamatic Heating System (AUTO, OFF, ON)</description>
		<state>
			<options>
				<option value="0">AUTO</option>
				<option value="1">OFF</option>
				<option value="2">ON</option>
			</options>
		</state>
	</channel-type>
	<channel-type id="setheatcircprogram" advanced="true">
		<item-type>String</item-type>
		<label>Set Program of Heat Circle 0...8</label>
		<description>Set Program of Heat Circle 0...8 of the Guntamatic Heating System (OFF, NORMAL, HEAT, LOWER)</description>
		<state>
			<options>
